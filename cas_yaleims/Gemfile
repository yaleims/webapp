gem 'coffee-rails', '~> 4.0.0'

# Javascript
gem 'jquery-rails'
gem 'angularjs-rails'
gem 'angular-ui-router-rails'
gem 'angular-ui-bootstrap-rails'
gem 'rails-assets-angular-mocks'
gem 'underscore-rails'

# Testing
gem 'rspec-rails'
gem 'jasmine-rails'

# Rails 4 compatibility
